{{!< default}}

<header id="site-head" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
  <div class="dotted_bg"></div>
  <div class="site-head-inner">
    <div class="vertical">
      <div id="site-head-content" class="inner">
        {{#if @blog.logo}}<a id="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" /></a>{{/if}}
        <h1 class="blog-title">{{@blog.title}}</h1>
        <h2 class="blog-description">{{@blog.description}}</h2>
      </div>
    </div>
    <div class="social-panel">
      <div class="buttons">
        <a class="btn" href="https://twitter.com/chenjun_cs" target="_blank">
          <img src="{{asset "images/twitter.svg"}}" alt="twitter" title="twitter">
        </a>
        <a class="btn" href="https://www.facebook.com/profile.php?id=100008505615994" target="_blank">
          <img src="{{asset "images/facebook.svg"}}" alt="facebook" title="facebook">
        </a>
        <a class="btn" href="https://plus.google.com/u/0/100852661248317192854/posts" target="_blank">
          <img src="{{asset "images/google.svg"}}" alt="google+" title="google+">
        </a>
      </div>
    </div>
  </div>
</header>

{{> navbar}}

<main class="content" role="main">
  {{#foreach posts}}
    <article class="{{post_class}}">
      <div class="post-inner clearfix">
        <div class="column-left">
          <span class="post-meta">
            <time datetime="{{date published_at format='YYYY-MM-DD'}}">
              <span>{{date published_at format="DD"}}</span>
              <span>{{date published_at format="MM"}}月</span>
              <span>{{date published_at format="YYYY"}}年</span>
            </time>
          </span>
        </div>
        <div class="column-right">
          <header class="post-header">
            <h2 class="post-title"><a href="{{url}}">{{title}}</a></h2>
          </header>
          <span class="post-meta clearfix">
            <span>
              <i class="fa fa-pencil"></i>
              {{#author}}<a href="{{url}}">{{name}}</a>{{/author}}
            </span>
          </span>
          {{#if image}}
          <section class="post-image">
            <p>
              <img src="{{image}}" alt="profile image">
            </p>
          </section>
          {{/if}}
          <section class="post-excerpt">
            <p>{{excerpt characters="200"}} [&hellip;]</p>
            <div class="read-more">
              <a class="read-more" href="{{url}}"><i class="fa fa-plus"></i> 阅读全文</a>
            </div>
          </section>
          <span class="post-meta clearfix">
            <span>
              <i class="fa fa-tag"></i>
              <a href="">{{tags separator=" | "}}</a>
            </span>
          </span>
        </div>
      </div>
    </article>
  {{/foreach}}

  {{#if pagination}}
  <div class="pagination-wrapper">
    {{pagination}}
  </div>
  {{/if}}
</main>